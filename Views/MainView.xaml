<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="SampleCode.Views.MainView"
    Title="Simple Drag Selection" 
    Width="450"
    Height="300"
    
    >

    <DockPanel Width="Auto" Height="Auto" Background="LightBlue">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center">
            <Button x:Name="LoadPdf" Content="Load Pdf" Width="50" />
            <Button x:Name="LoadImage" Content="Load Image" Width="69" Margin="12,0,0,0" />
        </StackPanel>
    
        <ContentControl x:Name="ActiveItem" />
    
    </DockPanel>


    
</Window>
