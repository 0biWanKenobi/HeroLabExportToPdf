<UserControl x:Class="SampleCode.Views.PdfImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:o="clr-namespace:SampleCode.Observers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
        <Image x:Name="Image" 
               o:SizeObserver.Observe="True"
               o:SizeObserver.ObservedWidth="{Binding Width, Mode=OneWayToSource}"
               o:SizeObserver.ObservedHeight="{Binding Height, Mode=OneWayToSource}"
         />
    
</UserControl>
